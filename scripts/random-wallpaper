#!/usr/bin/env bash

if [[ -f ~/.config/i3/EndeavourOS-HD-Wallpaper/EndeavourOS\ _Blue_SpaceStation__38402160.png ]]; then
  wallpapers=~/.config/i3/EndeavourOS-HD-Wallpaper
else
  wallpapers=~/.config/i3/image-not-found-.png
fi

sleep 0.1
wal -i $wallpapers -a "0.7" --vte
pywalfox update
[[ `tmux info` ]] && tmux source-file ~/.config/tmux/tmux.conf
